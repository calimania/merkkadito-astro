---
import { IconPlane } from '@tabler/icons-react';

export interface Props {
  albums?: any[];
  title?: string;
}

const { albums = [], title = "" } = Astro.props;
---

<section class="py-24 ">
  <div class="max-w-7xl mx-auto px-8">
    <!-- Section Header -->
    <header class="text-center mb-20">
      <div class="mb-8">
        <div class="w-px h-16 bg-gradient-to-b from-purple-600 to-pink-600 mx-auto mb-8"></div>
      </div>

      <h2 class="text-5xl md:text-6xl font-extralight bg-gradient-to-r from-purple-600 via-pink-600 to-purple-800 bg-clip-text text-transparent mb-8 tracking-tight">
        {title}
      </h2>

      <div class="mt-12">
        <div class="w-24 h-px bg-gradient-to-r from-purple-600 to-pink-600 mx-auto"></div>
      </div>
    </header>

    <!-- Albums Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 bg-white/80">
      {albums.map(album => {
        const coverUrl = album.cover?.url;

        return (
          <article class="group relative  rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-700 hover:-translate-y-3 ">
            <a href={`#/album/${album.slug}`} class="block h-full">
              <!-- Album Cover -->
              <div class="relative h-64 overflow-hidden">
                <img
                  src={coverUrl}
                  alt={album.title}
                  loading="lazy"
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000 filter grayscale group-hover:grayscale-0"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                <!-- Track Count Badge -->
                <div class="absolute top-4 right-4 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg">
                  <span class="text-xs font-medium text-gray-900">
                    ðŸŽµ {album.tracks.length} {album.tracks.length === 1 ? 'track' : 'tracks'}
                  </span>
                </div>

                <!-- Play Button Overlay -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="w-16 h-16 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-xl transform scale-75 group-hover:scale-100 transition-transform duration-300">
                    <span class="text-2xl ml-1">â–¶
                      <IconPlane size={18}/>
                    </span>
                  </div>
                </div>
              </div>

              <!-- Album Info -->
              <div class="p-6 space-y-4">
                <div class="space-y-2">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:bg-gradient-to-r group-hover:from-purple-600 group-hover:to-pink-600 group-hover:bg-clip-text group-hover:text-transparent transition-all duration-300 leading-tight">
                    {album.title}
                  </h3>

                  <p class="text-gray-600 text-sm leading-relaxed font-light">
                    {album.description}
                  </p>
                </div>

                <!-- Action Area -->
                <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                  <div class="flex items-center space-x-2">
                    <span class="w-2 h-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full animate-pulse"></span>
                    <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">
                      {/* Explore Collection */}
                    </span>
                  </div>

                  <div class="w-6 h-px bg-gradient-to-r from-purple-600 to-pink-600 group-hover:w-10 transition-all duration-300"></div>
                </div>
              </div>
            </a>
          </article>
        );
      })}
    </div>

    <!-- View All Button | use albums.astro -->
